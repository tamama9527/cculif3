<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="60dp"
        android:left="@dimen/bus_line_horizontal_margin"
        android:right="@dimen/bus_line_horizontal_margin"
        android:gravity="center_horizontal" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/bus_line"/>
            <size android:height="60dp" android:width="@dimen/bus_line_size"/>
        </shape>
    </item>
    <item android:gravity="center"
        android:top="@dimen/bus_stop_icon_vertical_margin"
        android:bottom="@dimen/bus_stop_icon_vertical_margin" >
        <shape android:shape="oval" >
            <size android:height="@dimen/bus_stop_icon_size" android:width="@dimen/bus_stop_icon_size"/>
            <solid android:color="@color/bus_icon"/>
            <stroke android:color="@color/bus_stop_icon_border" android:width="@dimen/bus_stop_icon_border_size"/>
        </shape>
    </item>
</layer-list>